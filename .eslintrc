{
  "env": {
    "browser": true,
    "es2024": true
  },
  "extends": [
    "airbnb",
    "plugin"
  ],
  "overrides": [
    {
      "files": [
        "*.config.js"
      ],
      "env": {
        "node": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
